<Stopwatch>:
	FloatLayout:
		id: timer
		size: root.width, root.height

		MDLabel:
			id: task_name
			text: ''
			theme_text_color: 'Custom'
			text_color: (164/255, 1, 0, 0.8)
			font_size: root.width*.06
			halign: 'center'
			pos_hint: {'y': 0.3}
			
		Label:
			id: stopwatch
			text: '00:00:00'
			font_size: root.width*.128
			pos_hint: {'y': 0.1}			
			
		MDIconButton:
			id: fail
			name: 'Fail'
			icon: 'window-close'
			icon_size: '54sp'
			theme_icon_color: 'Custom'
			icon_color: (1, 0, 0, 1)
			size_hint: None, None
			width: root.width/4
			height: root.height/10
			pos_hint: {'x': 0.1, 'y': 0.15}
			on_press: root.res(self.name)
		
		MDIconButton:
			id: success
			name: 'Success'
			icon: 'check'
			icon_size: '54sp'
			theme_icon_color: 'Custom'
			icon_color: (0, 1, 0, 1)
			size_hint: None, None
			width: root.width/4
			height: root.height/10
			pos_hint: {'x': 0.65, 'y': 0.15}
			on_press: root.res(self.name)
			

		MDRoundFlatButton:
			id: start_pause
			text: 'Start'
			font_size: root.width*.05
			size_hint: .25, .1
			pos_hint: {'x': 0.375, 'y': 0.015}
			on_press: root.start_pause()
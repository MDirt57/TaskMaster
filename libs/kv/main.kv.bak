<Menu, History>:

	FloatLayout:
		id: menu
		size: root.width, root.height
		
		DropDown:
			id: task_list
			size_hint: None, None
			width: root.width
			height: 9*root.height/10
			pos_hint: {'top': .9}
			open: menu
			auto_dismiss: False
			
		GridLayout:
			cols: 3
			
			Button:
				id: other
				text: 'O'
				font_size: 36
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_press: app.root.other_button
		
			Label:
				text: 'TaskMaster'
				font_size: 36
				size_hint: None, None
				width: 3*root.width/5
				height: root.height/10
	
			Button:
				id: edit
				text: '+'
				font_size: 36
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_press: root.edit()
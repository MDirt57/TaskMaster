<Menu, History>:

	FloatLayout:
		id: menu
		size: root.width, root.height
		
		ScrollView:
			pos_hint: {'top': .9}
			do_scroll_x: False
			do_scroll_y: True

			GridLayout:
				id: task_list
				cols: 1
				size_hint: 1, None
				height: self.minimum_height + 100
				
			
		GridLayout:
			cols: 3

			MDIconButton:
				id: other
				icon_size: '54sp'
				md_bg_color: (18/255, 18/255, 18/255, 1)
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_release: root.add_group()


			MDLabel:
			    id: group
				text: 'Main'
				halign: 'center'
				font_size: root.width*.06
				size_hint: None, None
				width: 3*root.width/5
				height: root.height/10
	
			MDIconButton:
				id: edit
				icon_size: '54sp'
				md_bg_color: (18/255, 18/255, 18/255, 1)
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_release: root.edit()
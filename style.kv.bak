<Menu>:
	name: 'menu'
	task_list: task_list
	
	FloatLayout:
		id: menu
		size: root.width, root.height
		
		DropDown:
			id: task_list
			size_hint: None, None
			width: root.width
			height: 9*root.height/10
			pos_hint: {'top': .9}
			open: menu
			auto_dismiss: False
			
		GridLayout:
			cols: 3
			
			Button:
				id: settings
				text: 'O'
				font_size: 36
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_press: app.root.current = 'timer'
		
			Label:
				text: 'TaskMaster'
				font_size: 36
				size_hint: None, None
				width: 3*root.width/5
				height: root.height/10
	
			Button:
				id: edit
				text: '+'
				font_size: 36
				size_hint: None, None
				width: root.width/5
				height: root.height/10
				on_press: root.edit()
				
				
<Timer>:
	FloatLayout:
		id: timer
		size: root.width, root.height

		Label:
			id: task_name
			text: 'sd'
			font_size: 24
			pos_hint: {'y': 0.3}
			
		Label:
			id: stopwatch
			text: '00:00:00'
			font_size: 48
			pos_hint: {'y': 0.1}			
			
		Button:
			id: fail
			text: 'Fail'
			font_size: 24
			size_hint: None, None
			width: root.width/4
			height: root.height/10
			pos_hint: {'x': 0.1, 'y': 0.15}
			on_press: root.pause()
		
		Button:
			id: success
			text: 'Success'
			font_size: 24
			size_hint: None, None
			width: root.width/4
			height: root.height/10
			pos_hint: {'x': 0.65, 'y': 0.15}
			on_press: root.start()

		Button:
			id: pause
			text: 'Pause'
			font_size: 24
			size_hint: None, None
			width: root.width/4
			height: root.height/10
			pos_hint: {'x': 0.375, 'y': 0.015}
			on_press: app.root.current = 'menu'

			